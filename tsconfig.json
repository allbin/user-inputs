{
    "compilerOptions": {
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "baseUrl": ".",
        "outDir": "dist",
        "module": "esnext",
        "target": "es6",
        "lib": [
            "es7",
            "dom"
        ],
        "sourceMap": true,
        "declaration": true,
        "newLine": "LF",
        "declarationDir": "dist",
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "Gulpfile.js"
    ]
}